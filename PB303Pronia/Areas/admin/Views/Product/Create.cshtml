@model ProductCreateViewModel
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
                Create Product
            </p>
            <form method="post" class="forms-sample" enctype="multipart/form-data">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label for="exampleInputUsername1">Name</label>
                    <input class="form-control" id="input1" asp-for="Name"  placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label for="exampleInputUsername1">Price</label>
                    <input class="form-control" id="input1" asp-for="Price" placeholder="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label for="exampleInputUsername1">Rating</label>
                    <input class="form-control" id="input1" asp-for="Rating" placeholder="Rating">
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>




                <div class="form-group">
                    <label for="exampleInputUsername1">Main image</label>
                    <input class="form-control" id="input1" asp-for="MainImage" placeholder="Name">
                    <span asp-validation-for="MainImage" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label for="exampleInputUsername1">Hover image</label>
                    <input class="form-control" id="input1" asp-for="HoverImage" placeholder="Name">
                    <span asp-validation-for="HoverImage" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label for="exampleInputUsername1">Additional image</label>
                    <input class="form-control" id="input1" asp-for="AdditionalImages" placeholder="Name">
                    <span asp-validation-for="AdditionalImages" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>






