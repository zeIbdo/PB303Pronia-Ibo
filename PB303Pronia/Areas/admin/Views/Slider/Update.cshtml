@model SliderUpdateViewModel

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Default form</h4>
                <p class="card-description">
                    Update slider
                </p>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label for="exampleInputUsername1">Title</label>
                        <input class="form-control" id="input1" asp-for="Title" placeholder="Name">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>



                    <div class="form-group">
                        <label for="exampleInputUsername1">DTitle</label>
                        <input class="form-control" id="input1" asp-for="DiscountTitle" placeholder="Price">
                        <span asp-validation-for="DiscountTitle" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label for="exampleInputUsername1">Description</label>
                        <input class="form-control" id="input1" asp-for="Description" placeholder="Rating">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>




                    <div class="form-group">
                        <img src="~/assets/images/@Model.ImagePath" alt="Alt" />
                        <input type="hidden" asp-for="ImagePath" value="@Model.ImagePath" />
                        <label for="exampleInputUsername1">Slider image</label>
                        <input class="form-control" id="input1" asp-for="SliderImage" placeholder="Image">
                        <span asp-validation-for="SliderImage" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button asp-action="index" class="btn btn-light">Cancel</button>
                </form>
                <div asp-validation-summary="ModelOnly"></div>
            </div>
        </div>
    </div>
</div>